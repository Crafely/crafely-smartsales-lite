<?xml version="1.0"?>
<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    name="Crafely SmartSales"
    xsi:noNamespaceSchemaLocation="https://raw.githubusercontent.com/PHPCSStandards/PHP_CodeSniffer/master/phpcs.xsd">

    <description>Coding standards for Crafely SmartSales WordPress Plugin</description>

    <!-- Scan these files -->
    <file>.</file>

    <!-- Exclude Paths -->
    <exclude-pattern>/vendor/*</exclude-pattern>
    <exclude-pattern>/node_modules/*</exclude-pattern>
    <exclude-pattern>/assets/*</exclude-pattern>
    <exclude-pattern>*.min.js</exclude-pattern>
    <exclude-pattern>*.min.css</exclude-pattern>
    <exclude-pattern>/tests/*</exclude-pattern>

    <!-- Scan options -->
    <arg value="sp"/> <!-- Show sniff + progress -->
    <arg name="colors"/>
    <arg name="basepath" value="."/>
    <arg name="extensions" value="php"/>
    <arg name="tab-width" value="4"/>
    <arg name="parallel" value="8"/>

    <!-- ========================== -->
    <!-- AUTOFIXABLE RULES -->
    <!-- Formatting, indentation, braces, docblocks -->
    <!-- ========================== -->
    <rule ref="Generic.WhiteSpace.ScopeIndent">
        <properties>
            <property name="indent" value="1"/>
            <property name="exact" value="true"/>
            <property name="tabIndent" value="true"/>
        </properties>
    </rule>

    <rule ref="Generic.WhiteSpace.DisallowSpaceIndent"/>
    <rule ref="Squiz.WhiteSpace.SuperfluousWhitespace">
        <properties>
            <property name="ignoreBlankLines" value="false"/>
        </properties>
    </rule>

    <rule ref="Generic.Functions.OpeningFunctionBraceKernighanRitchie"/>
    <rule ref="Squiz.Functions.MultiLineFunctionDeclaration"/>
    <rule ref="Squiz.Commenting.FunctionComment"/>
    <rule ref="Squiz.Commenting.InlineComment"/>
    <rule ref="Generic.CodeAnalysis.UnusedFunctionParameter.Found">
    <severity>0</severity>
    </rule>
    <rule ref="WordPress.WP.Capabilities.Unknown">
    <severity>0</severity>
    </rule>

    <!-- ========================== -->
    <!-- MANUAL / SECURITY RULES -->
    <!-- Nonce, escaping, sanitization, safe redirects, SQL -->
    <!-- These cannot be autofixed -->
    <!-- ========================== -->
    <rule ref="WordPress.Security.NonceVerification"/>
    <rule ref="WordPress.Security.NonceVerification.Missing"/>
    <rule ref="WordPress.Security.EscapeOutput"/>
    <rule ref="WordPress.Security.ValidatedSanitizedInput"/>
    <rule ref="WordPress.Security.SafeRedirect"/>
    <rule ref="WordPress.DB.PreparedSQL"/>
    <rule ref="WordPress.DB.PreparedSQLPlaceholders"/>

    <!-- WordPress Standards -->
    <rule ref="WordPress-Core">
        <exclude name="WordPress.Files.FileName"/>
        <exclude name="WordPress.NamingConventions.ValidVariableName"/>
        <exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
        <exclude name="PEAR.Functions.FunctionCallSignature"/>
        <exclude name="WordPress.NamingConventions.PrefixAllGlobals"/>
    </rule>
    <rule ref="WordPress-Extra"/>
    <rule ref="WordPress-Docs"/>
    <rule ref="Generic.Commenting.Todo"/>

    <!-- PHP Compatibility -->
    <config name="testVersion" value="8.0-"/>
    <rule ref="PHPCompatibilityWP">
        <include-pattern>*\.php</include-pattern>
    </rule>

    <!-- WordPress version -->
    <config name="minimum_wp_version" value="6.0"/>

    <!-- Memory limit -->
    <ini name="memory_limit" value="256M"/>

    <!-- Plugin specific rules -->
    <rule ref="WordPress.WP.I18n">
        <properties>
            <property name="text_domain" type="array">
                <element value="crafely-smartsales-lite"/>
            </property>
        </properties>
    </rule>
    <rule ref="WordPress.NamingConventions.PrefixAllGlobals">
        <properties>
            <property name="prefixes" type="array">
                <element value="csmsl"/>
            </property>
        </properties>
    </rule>

    <!-- PSR-4 namespaces -->
    <rule ref="PSR1.Classes.ClassDeclaration"/>
</ruleset>
